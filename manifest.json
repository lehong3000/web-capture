{
	"name": "WebCapture",
	"description": "Tự động capture hình ảnh gửi lên server",
	"version": "1.1",
	"manifest_version": 3,
	"permissions": [
		"storage"
	],
	"content_scripts": [
		{
			"matches": [ "https://*/*", "http://*/*" ],
			"js": [ "main.js" ]
		}
	],
	"icons": {
		"16": "/images/16.ico",
		"32": "/images/32.ico",
		"48": "/images/48.ico",
		"128": "/images/128.ico"
	}
}
